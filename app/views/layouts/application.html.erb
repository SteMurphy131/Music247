<!DOCTYPE html>
<html>
<head>
  <title>MusicPage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="http://localhost:3000">Music 247</a>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
						<ul class="nav navbar-nav navbar-right">
						<li><%= link_to "Artists", artists_path%></li>
						<li><%= link_to "Labels", labels_path %></li>
						<li><%= link_to "Releases", releases_path%></li>
						<li><%= link_to "Tracks", tracks_path%></li>
						<%if !logged_in? %>
							<li><%= link_to "Sign In", login_path %></li>
					<% else %>
						<li><%= link_to "Profile", profile_path%></li>
						<li><%= link_to "Sign Out", logout_path %></li>
					<% end %>
					  </ul>
					  <form class="navbar-form navbar-right">
						<input type="text" class="form-control" placeholder="Search...">
					  </form>
			</div>
		</div>
		</nav>
		</br></br></br>	


	<%= yield %>
	
<footer class="footer navbar-fixed-bottom">
		<div class="footer">
			<p class="text-muted">
				<ul class="list-group">
					<li class="list-group-item">Stephen Murphy: Music 247</li>
				</ul>
			</p>
		</div>
	</footer>	
</body>
</html>
