<div class = "container">
<p id="notice"><%= notice %></p>
<h2 class = "sub-header">Tracks</h2>
<div class = "table-resposive">
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.name %></td>
        <td><%= track.release.name %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Track', new_track_path %>
</div>