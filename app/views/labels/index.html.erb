<p id="notice"><%= notice %></p>

<h2 class = "sub-header">Labels</h2>
<div class = "table-responsive">
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <!--<th>Image</th>-->
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= label.location %></td>
        <!--<td><%= label.image %></td>-->
        <td><%= label.owner %></td>
        <td><%= link_to 'Show', label %></td>
        <td><%= link_to 'Edit', edit_label_path(label) %></td>
        <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Label', new_label_path %>
